                        wait(100)
                        Box.Color = Color3.fromRGB(0,100,255)
                        wait(100)
                        Box.Color = Color3.fromRGB(0,75,225)
                        wait(100)
                        Box.Color = Color3.fromRGB(0,50,255)
                        wait(100)
